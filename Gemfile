source 'https://rubygems.org'
source 'https://code.stripe.com'

# Framework
gem 'rack-parser'
gem 'sinatra'
gem 'sinatra-contrib'

# Database
gem 'pg'
gem 'sequel'

# Helpers
gem 'bcrypt'
gem 'rabl'
gem 'oj'
gem 'sidekiq'
gem 'geocoder'
gem 'stripe'

# External libraries
gem 'mandrill-api'
gem 'aws-sdk'

# Server
gem 'rerun'
gem 'thin'

# Deployment tools
group :deployment do
  gem 'capistrano', '~> 3.2.0'
  gem 'capistrano-bundler', '~> 1.1.3'
  gem 'capistrano-rvm'
end

# Test
group :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'factory_girl'
end
